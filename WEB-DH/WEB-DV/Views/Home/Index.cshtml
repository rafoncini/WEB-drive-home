@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Home - Tu Dealer de Confianza</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Vue.js CDN -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
</head>
<body>
    <!-- Contenedor principal de Vue -->
    <div id="app">
    <!-- Header -->
    <header class="header">
        <nav class="nav">
            <div class="nav-brand">
                <h1>Driver Home</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="#inicio">Inicio</a></li>
                <li><a href="#vehiculos">Vehículos</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#contacto">Contacto</a></li>
            </ul>
            <div class="nav-toggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="inicio" class="hero">
        <div class="hero-content">
            <h1>{{ message }}</h1>
            <p>La mejor selección de vehículos usados y nuevos con garantía y financiamiento</p>
            <a href="#vehiculos" class="btn btn-primary">Ver Vehículos</a>
        </div>
        <div class="hero-image">
            <img src="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Carro deportivo">
        </div>
    </section>

    <!-- Vehículos Section -->
    <section id="vehiculos" class="vehicles">
        <div class="container">
            <h2>Vehículos Disponibles</h2>
            <div class="vehicles-grid">
                <div v-for="vehiculo in vehiculos" :key="vehiculo.id" class="vehicle-card">
                    <img :src="vehiculo.imagen" :alt="vehiculo.nombre">
                    <div class="vehicle-info">
                        <h3>{{ vehiculo.nombre }}</h3>
                        <p class="year">{{ vehiculo.año }}</p>
                        <p class="price">{{ vehiculo.precio }}</p>
                        <p class="miles">{{ vehiculo.kilometraje }}</p>
                        <button v-on:click="verDetalles(vehiculo)" class="btn btn-secondary">Ver Detalles</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Servicios Section -->
    <section id="servicios" class="services">
        <div class="container">
            <h2>Nuestros Servicios</h2>
            <div class="services-grid">
                <div v-for="servicio in servicios" :key="servicio.id" class="service-card">
                    <i :class="servicio.icono"></i>
                    <h3>{{ servicio.titulo }}</h3>
                    <p>{{ servicio.descripcion }}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contacto Section -->
    <section id="contacto" class="contact">
        <div class="container">
            <h2>Contáctanos</h2>
            <div class="contact-content">
                <div class="contact-info">
                    <h3>Información de Contacto</h3>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>123 Calle Principal, Ciudad</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <p>+1 (555) 123-4567</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <p>info@DriverHome.com</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <p>Lun - Vie: 9:00 AM - 6:00 PM</p>
                    </div>
                </div>
                <form class="contact-form" v-on:submit.prevent="enviarFormulario">
                    <input v-model="formulario.nombre" type="text" placeholder="Nombre completo" required>
                    <input v-model="formulario.email" type="email" placeholder="Email" required>
                    <input v-model="formulario.telefono" type="tel" placeholder="Teléfono">
                    <textarea v-model="formulario.mensaje" placeholder="Mensaje" rows="5" required></textarea>
                    <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Driver Home</h3>
                    <p>Tu dealer de confianza desde 2010</p>
                </div>
                <div class="footer-section">
                    <h4>Enlaces Rápidos</h4>
                    <ul>
                        <li><a href="#inicio">Inicio</a></li>
                        <li><a href="#vehiculos">Vehículos</a></li>
                        <li><a href="#servicios">Servicios</a></li>
                        <li><a href="#contacto">Contacto</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Síguenos</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Driver Home. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    </div> <!-- Fin del contenedor de Vue -->

    <!-- Inicialización de Vue.js -->
    <script>
        const { createApp, ref } = Vue;
        
        const app = createApp({
            data() {
                return {
                    message: 'Bienvenido a Driver Home con Vue.js',
                    vehiculos: [
                        {
                            id: 1,
                            nombre: 'Chevrolet Camaro',
                            año: 2022,
                            precio: '$45,000',
                            kilometraje: '25,000 km',
                            imagen: 'https://images.unsplash.com/photo-1552519507-da3b142c6e3d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80'
                        },
                        {
                            id: 2,
                            nombre: 'BMW X5',
                            año: 2021,
                            precio: '$65,000',
                            kilometraje: '18,000 km',
                            imagen: 'https://images.unsplash.com/photo-1614200187524-dc4b892acf16?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80'
                        },
                        {
                            id: 3,
                            nombre: 'Toyota Camry',
                            año: 2023,
                            precio: '$35,000',
                            kilometraje: '12,000 km',
                            imagen: 'https://images.unsplash.com/photo-1614200187524-dc4b892acf16?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80'
                        }
                    ],
                    servicios: [
                        {
                            id: 1,
                            titulo: 'Venta de Vehículos',
                            descripcion: 'Amplia selección de autos usados y nuevos con garantía',
                            icono: 'fas fa-car'
                        },
                        {
                            id: 2,
                            titulo: 'Mantenimiento',
                            descripcion: 'Servicio técnico especializado para todas las marcas',
                            icono: 'fas fa-tools'
                        },
                        {
                            id: 3,
                            titulo: 'Financiamiento',
                            descripcion: 'Opciones de crédito flexibles y tasas competitivas',
                            icono: 'fas fa-money-bill-wave'
                        }
                    ],
                    formulario: {
                        nombre: '',
                        email: '',
                        telefono: '',
                        mensaje: ''
                    }
                }
            },
            methods: {
                verDetalles(vehiculo) {
                    alert(`Detalles de ${vehiculo.nombre}: ${vehiculo.año}, ${vehiculo.precio}, ${vehiculo.kilometraje}`);
                },
                enviarFormulario() {
                    alert(`Formulario enviado: ${this.formulario.nombre}, ${this.formulario.email}, ${this.formulario.telefono}, ${this.formulario.mensaje}`);
                    // Aquí se podría agregar código para enviar el formulario a un servidor
                    this.formulario.nombre = '';
                    this.formulario.email = '';
                    this.formulario.telefono = '';
                    this.formulario.mensaje = '';
                }
            }
        });
        
        app.mount('#app');
    </script>
    
    <script src="~/js/site.js"></script>
</body>
</html>
